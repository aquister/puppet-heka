# This file is controlled via puppet.
[<%= @plugin_name -%>]
type = "UdpInput"

# specific settings
address = "<%= @address -%>"
net = "<%= @net -%>"
set_hostname = <%= @set_hostname %>

<% if @signer then -%>
<% @signer.each do |key, value| -%>
[<%= @plugin_name -%>.signer.<%= key -%>]
hmac_key = "<%= value -%>"
<% end -%>
<% end -%>

<%= scope.function_template(['heka/plugin/_input.toml.erb']) %>
