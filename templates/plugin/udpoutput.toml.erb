# This file is controlled via puppet.
[<%= @full_name -%>]
type = "UdpOutput"

<%= scope.function_template(['heka/plugin/_output.toml.erb']) %>

# specific settings
address = "<%= @address -%>"
<% if @net then -%>net = "<%= @net -%>"
<% end -%>
<% if @local_address then -%>local_address = "<%= @local_address -%>"
<% end -%>
<% if @max_message_size then -%>max_message_size = <%= @max_message_size %>
<% end -%>

<%= scope.function_template(['heka/plugin/_buffering.toml.erb']) %>
